{
  "manifest_version": 3,
  "name": "Instagram Follow Manager PRO",
  "version": "1.0",
  "description": "Gesti√≥n avanzada de seguidores para Instagram. Exporta, compara y gestiona tu comunidad.",
  "permissions": [
    "storage",
    "downloads",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "https://www.instagram.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon.png",
      "48": "assets/icon.png",
      "128": "assets/icon.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
